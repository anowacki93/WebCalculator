@model Kalkulator.Models.CalculatorViewModel
@{ ViewData["Title"] = "Home Page"; }

<div class="col-md-16">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Value1" class="form-control" />
            <span asp-validation-for="Value1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Value2" class="form-control" />
            <span asp-validation-for="Value2" class="text-danger"></span>
        </div>
        <input type="submit" value="add" name="command" class="btn btn-primary"/>
        <input type="submit" value="sub" name="command" class="btn btn-primary"/>
        <input type="submit" value="mul" name="command" class="btn btn-primary"/>
        <input type="submit" value="div" name="command" class="btn btn-primary"/>
        <input type="submit" value="mod" name="command" class="btn btn-primary"/>
        <h2 style="color:red">
            @Html.Label("Result:")
            @Html.DisplayFor(x => x.Result)
        </h2>
    </form>
</div>




